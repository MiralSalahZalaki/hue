<odoo>
<!--    list view for certificates-->
    <record id="hue_certificates_list_view" model="ir.ui.view">
            <field name="name">Certificates List View</field>
            <field name="model">hue.certificate</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
    </record>

<!--    form view for certificates-->
    <record id="hue_certificates_form_view" model="ir.ui.view">
            <field name="name">Certificates Form View</field>
            <field name="model">hue.certificate</field>
            <field name="arch" type="xml">
                    <form>
                            <sheet>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="d_id"/>
                                            <field name="certificate_active"/>
                                        </group>
                                        <group>
                                            <field name="certificate_type"/>
                                            <field name="enroll_code"/>
                                        </group>
                                    </group>
                            </sheet>
                    </form>
            </field>
    </record>

<!--    certificates action-->
    <record id="hue_certificates_action" model="ir.actions.act_window">
            <field name="name">hue Certificates action</field>
            <field name="res_model">hue.certificate</field>
            <field name="view_mode">list,form</field>
    </record>

<!--    menu item for hue certificates-->
    <menuitem id="hue_certificates_menu_item" name="Certificates" parent="menu_registration_config" action="hue_certificates_action"/>
</odoo>