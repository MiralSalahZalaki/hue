<odoo>

<!-- list view for hue student status   -->
    <record id="hue_student_status_list_view" model="ir.ui.view">
            <field name="name">Student Status List View</field>
            <field name="model">hue.student.status</field>
            <field name="arch" type="xml">
                    <list>
                            <field name="name"/>
                            <field name="en_name"/>
                            <field name="active_invoice"/>
                    </list>
            </field>
    </record>

<!--  form view for hue student status   -->
    <record id="hue_student_status_form_view" model="ir.ui.view">
            <field name="name">Student Status Form View</field>
        <field name="model">hue.student.status</field>
        <field name="arch" type="xml">
                <form>
                        <sheet>
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="en_name"/>
                                    </group>
                                    <group>
                                        <field name="d_id"/>
                                        <field name="active_invoice"/>
                                    </group>
                                </group>
                        </sheet>
                </form>
        </field>
    </record>


<!--  action for hue student status  -->
    <record id="hue_student_status_action" model="ir.actions.act_window">
            <field name="name">hue Student Status action</field>
            <field name="res_model">hue.student.status</field>
            <field name="view_mode">list,form</field>
    </record>



<!--  menu item for hue student status  -->
    <menuitem id="hue_student_status_menu_item" name="Student Status" parent="menu_registration_config" action="hue_student_status_action"/>
</odoo>