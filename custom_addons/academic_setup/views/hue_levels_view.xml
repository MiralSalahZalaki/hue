<odoo>
    <record id="hue_levels_view_list" model="ir.ui.view">
        <field name="name">hue levels list</field>
        <field name="model">hue.levels</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="hue_levels_view_form" model="ir.ui.view">
        <field name="name">hue levels form</field>
        <field name="model">hue.levels</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" string="Name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="action_hue_levels" model="ir.actions.act_window">
        <field name="name"> levels </field>
        <field name="res_model">hue.levels</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="levels_menu_item"
              name="Levels"
              parent="menu_academic_configuration"
              action="action_hue_levels"/>
</odoo>