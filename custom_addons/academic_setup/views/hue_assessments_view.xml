<odoo>
    <record id="hue_assessments_view_list" model="ir.ui.view">
        <field name="name">hue assessments list</field>
        <field name="model">hue.assessments</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string='Name'/>
            </list>
        </field>
    </record>
    <record id="hue_assessments_view_form" model="ir.ui.view">
        <field name="name">hue assessments form</field>
        <field name="model">hue.assessments</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" />
                        <field name="control_field" />
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="action_hue_assessments" model="ir.actions.act_window">
        <field name="name">Assessments</field>
        <field name="res_model">hue.assessments</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="hue_assessments_menu_item"
              name="Assessments"
              parent="grade_and_assessments_root_menu"
              action="action_hue_assessments"/>
</odoo>