<odoo>
<!--    list view for hue city-->
    <record id="hue_city_list_view" model="ir.ui.view">
            <field name="name">Cities List View</field>
            <field name="model">hue.city</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="en_name"/>
                </list>
            </field>
    </record>

<!--    form view for hue city-->
    <record id="hue_city_form_view" model="ir.ui.view">
            <field name="name">Cities Form View</field>
            <field name="model">hue.city</field>
            <field name="arch" type="xml">
                    <form>
                            <sheet>
                                   <group>
                                                    <field name="name"/>
                                                    <field name="en_name"/>
                                                    <field name="d_id"/>
                                   </group>
                            </sheet>
                    </form>
            </field>
    </record>



<!--    action for hue city-->
    <record id="hue_city_action" model="ir.actions.act_window">
            <field name="name">hue City action</field>
            <field name="res_model">hue.city</field>
            <field name="view_mode">list,form</field>
    </record>

<!--    menu item for hue city-->
    <menuitem id="hue_city_menu_item" name="Cities" parent="menu_registration_config" action="hue_city_action"/>
</odoo>