<odoo>
<!--    list view-->
    <record id="hue_op_department_list_view_inherit" model="ir.ui.view">
    <field name="name">Faculty List View Inherit</field>
    <field name="model">op.department</field>
    <field name="inherit_id" ref="openeducat_core.view_op_department_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='parent_id']" position="after">
            <field name="name_ar"/>
            <field name="identifier"/>
            <field name="faculty_create_ou"/>
            <field name="jornal_id"/>
            <field name="ldap_dn"/>
            <field name="check_questionnaire"/>
            <field name="intern_year"/>
        </xpath>
    </field>
</record>



    <!--    form view-->
       <record id="hue_op_department_form_view_inherit" model="ir.ui.view">
        <field name="name">Faculty Form View Inherit</field>
        <field name="model">op.department</field>
        <field name="inherit_id" ref="openeducat_core.view_op_department_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='parent_id']" position="after">
            <field name="name_ar"/>
            <field name="identifier"/>
            <field name="faculty_create_ou"/>
           </xpath>
            <xpath expr="//field[@name='code']" position="after">
            <field name="jornal_id"/>
            <field name="ldap_dn"/>
            <field name="check_questionnaire"/>
            <field name="intern_year"/>

        </xpath>
        </field>
    </record>





     <!-- Menu -->
    <menuitem id="hue_op_department_menu_item" name="Faculties" parent="menu_academic_configuration" action="openeducat_core.act_open_op_department_view" sequence="1"/>
</odoo>