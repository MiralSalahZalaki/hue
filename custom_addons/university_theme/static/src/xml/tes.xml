<odoo>
    <record id="academic_year_view_list" model="ir.ui.view">
        <field name="name">academic.year.list</field>
        <field name="model">op.academic.year</field>
        <field name="inherit_id" ref="openeducat_core.view_op_academic_year_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="sequence"/>
            </xpath>
            <xpath expr="//field[@name='index']" position="after">
                <field name="run_semester_gpa"/>
                <field name="timetable_current"/>
                <field name="year_code"/>
                <field name="invoice_date"/>
            </xpath>
        </field>
    </record>
    <record id="academic_year_view_form" model="ir.ui.view">
        <field name="name">academic.year.form</field>
        <field name="model">op.academic.year</field>
        <field name="inherit_id" ref="openeducat_core.view_op_academic_year_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='term_structure']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="sequence"/>
            </xpath>
        </field>
    </record>
    <record id="academic_year_action" model="ir.actions.act_window">
        <field name="name">Academic Year</field>
        <field name="res_model">op.academic.year</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="academic_year_menu_item"
        name="Academic Year"
        parent="academic_configration_menu"
        action="academic_year_action"
    />
</odoo>